<UserControl x:Class="Vistas.userControls.userControlABM.UserControlAMBUsuarioSinTabla"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:svc="clr-namespace:ClasesBase;assembly=ClasesBase"
             mc:Ignorable="d" 
             d:DesignHeight="325" d:DesignWidth="749">
    <UserControl.Resources>
        <ObjectDataProvider x:Key="DATA_CLIENT"
                            ObjectType="{x:Type svc:TrabajarClienteValidator}"
                            MethodName="TraerCliente">
        </ObjectDataProvider>

        <ControlTemplate x:Key="TextBoxErrorTemplate">
            <DockPanel>
                <Ellipse DockPanel.Dock="Right" Margin="120,10" Width="10" Height="10">
                    <Ellipse.Fill>
                        <LinearGradientBrush>
                            <GradientStop Color="#11FF1111" Offset="0"/>
                            <GradientStop Color="#FFFF0000" Offset="1"/>
                        </LinearGradientBrush>
                    </Ellipse.Fill>
                </Ellipse>
            </DockPanel>
        </ControlTemplate>

        <Style x:Key="EstiloError" TargetType="TextBox">
            <Setter Property="Margin" Value="20,4,10,4"/>
            <Setter Property="Validation.ErrorTemplate"
                    Value="{StaticResource TextBoxErrorTemplate}"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Padding" Value="2"/>
            <Setter Property="Width" Value="120"/>
            <Setter Property="FontFamily" Value="Century Gothic"/>
            <Setter Property="Background" Value="#FFFFFFDB"/>
            <Setter Property="Height" Value="25"/>

            <Style.Triggers>
                <Trigger Property="Validation.HasError" Value="True">
                    <Setter Property="ToolTip">
                        <Setter.Value>
                            <Binding Path="(Validation.Errors)[0].ErrorContent"
                                     RelativeSource="{x:Static RelativeSource.Self}"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid Name="gridPrincipalUsuarioSinTabla" Width="607" Background="#FFF7F7F7">
        <Grid Margin="131,-2,105,2">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*" />
                <RowDefinition Height="323*" />
            </Grid.RowDefinitions>
            <Button Background="#FFD73C61" Content="Nuevo Cliente" Height="23" HorizontalAlignment="Left" Margin="65,239,0,0" Name="btnNuevoCliente" Style="{StaticResource btn_plantilla_aceptar}" VerticalAlignment="Top" Width="168" Click="btnNuevoCliente_Click" Grid.Row="1" />
            <Label Content="DNI" DataContext="{Binding}" FontWeight="Bold" Foreground="Black" Height="28" HorizontalAlignment="Left" IsEnabled="True" Margin="35,17,0,0" Name="lblDNI" Target="{Binding}" VerticalAlignment="Top" Grid.RowSpan="2" />
            <Label Content="Nombre" DataContext="{Binding}" FontWeight="Bold" Foreground="Black" Height="28" HorizontalAlignment="Left" IsEnabled="True" Margin="35,50,0,0" Name="lblNombre" Target="{Binding}" VerticalAlignment="Top" Grid.Row="1" />
            <Label Content="Apellido" DataContext="{Binding}" FontWeight="Bold" Foreground="Black" Height="28" HorizontalAlignment="Left" IsEnabled="True" Margin="35,90,0,0" Name="lblApellido" Target="{Binding}" VerticalAlignment="Top" Grid.Row="1" />
            <Label Content="Telefono" DataContext="{Binding}" FontWeight="Bold" Foreground="Black" Height="28" HorizontalAlignment="Left" IsEnabled="True" Margin="35,130,0,0" Name="lblTelefono" Target="{Binding}" VerticalAlignment="Top" Grid.Row="1" />
            <Label Content="E-mail" DataContext="{Binding}" FontWeight="Bold" Foreground="Black" Height="28" HorizontalAlignment="Left" IsEnabled="True" Margin="35,170,0,0" Name="lblEmail" Target="{Binding}" VerticalAlignment="Top" Grid.Row="1" />
            <TextBox DataContext="{StaticResource DATA_CLIENT}" HorizontalAlignment="Left" IsEnabled="True" IsReadOnly="False" Margin="122,17,0,0" Name="txtDNI" Style="{StaticResource EstiloError}" TabIndex="1" Text="{Binding Path=Cli_dni, UpdateSourceTrigger=PropertyChanged, ValidatesOnExceptions=True, ValidatesOnDataErrors=True}" Width="120" Grid.RowSpan="2" Height="25" VerticalAlignment="Top" />
            <TextBox DataContext="{StaticResource DATA_CLIENT}" HorizontalAlignment="Left" IsEnabled="True" IsReadOnly="False" Margin="122,50,0,0" Name="txtNombre" Style="{StaticResource EstiloError}" TabIndex="2" Text="{Binding Path=Cli_nombre, UpdateSourceTrigger=PropertyChanged, ValidatesOnExceptions=True, ValidatesOnDataErrors=True}" Grid.Row="1" Height="25" VerticalAlignment="Top" />
            <TextBox DataContext="{StaticResource DATA_CLIENT}" HorizontalAlignment="Left" IsEnabled="True" IsReadOnly="False" Margin="122,90,0,0" Name="txtApellido" Style="{StaticResource EstiloError}" TabIndex="3" Text="{Binding Path=Cli_apellido, UpdateSourceTrigger=PropertyChanged, ValidatesOnExceptions=True, ValidatesOnDataErrors=True}" VerticalAlignment="Top" Grid.Row="1" />
            <TextBox DataContext="{StaticResource DATA_CLIENT}" HorizontalAlignment="Left" IsEnabled="True" IsReadOnly="False" Margin="122,130,0,0" Name="txtTelefono" Style="{StaticResource EstiloError}" TabIndex="4" Text="{Binding Path=Cli_telefono, UpdateSourceTrigger=PropertyChanged, ValidatesOnExceptions=True, ValidatesOnDataErrors=True}" VerticalAlignment="Top" Grid.Row="1" />
            <TextBox DataContext="{StaticResource DATA_CLIENT}" HorizontalAlignment="Left" IsEnabled="True" IsReadOnly="False" Margin="122,170,0,0" Name="txtEmail" Style="{StaticResource EstiloError}" TabIndex="5" Text="{Binding Path=Cli_email, UpdateSourceTrigger=PropertyChanged, ValidatesOnExceptions=True, ValidatesOnDataErrors=True}" VerticalAlignment="Top" Grid.Row="1" />
        </Grid>
    </Grid>
</UserControl>
