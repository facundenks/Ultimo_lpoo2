        <StackPanel Width="349">
            <FlowDocumentReader Canvas.Left="12" Canvas.Top="28">
                <FlowDocument Name="DocMain">
                    <Paragraph>Lista de Usuarios</Paragraph>
                    <BlockUIContainer>
                        <ListView Name="usuariosList">
                            <ListView.View>
                                <GridView>
                                    <GridView.Columns>
                                        <GridViewColumn Header="Usuario" DisplayMemberBinding="{Binding Path=usu_nombreUsuario}" Width="140"/>
                                        <GridViewColumn Header="Contraseña" DisplayMemberBinding="{Binding Path=usu_contraseña}"/>
                                    </GridView.Columns>
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </BlockUIContainer>
                </FlowDocument>
            </FlowDocumentReader>
        <Button Name="btnImprimir" Content="Imprimir" Click="btnImprimir_Click" Width="330" Foreground="White"></Button>
    </StackPanel> 
